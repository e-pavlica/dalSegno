.pure-u-4-5
  =form_for @user, html:{class:"pure-form"} do |u|
    %fieldset{class:"pure-group"}
      =u.text_field :email, {class: "pure-input-1", placeholder:"me@mydomian.com", type: "email" }
      =u.text_field :password, {class: "pure-input-1", placeholder:"password", type: "password", required:true}
    %fieldset{class:"pure-group"}
      =u.text_field :name, {class:"pure-input-1", placeholder:"Your Name"}
      =u.text_field :address, {class:"pure-input-1", placeholder:"123 Main St."}
      =u.text_field :city, {class:"pure-input-1", placeholder:"City"}
      =u.text_field :state, {class:"pure-input-1", placeholder:"State"}
      =u.text_field :zip, {class:"pure-input-1", placeholder:"Zip Code"}
      =u.text_field :phone, {class:"pure-input-1", placeholder:"Phone"}
    =u.submit nil, {class: "pure-button"}
